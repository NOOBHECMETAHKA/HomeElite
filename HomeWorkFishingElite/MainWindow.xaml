<Window x:Class="HomeWorkFishingElite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkFishingElite"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="20">
        <StackPanel Margin="0 5">
            <TextBlock TextAlignment="Center">Авторизация</TextBlock>
        </StackPanel>
        <StackPanel Margin="0 5">
            <TextBlock>Логин</TextBlock>
            <TextBox x:Name="tbLogin" Text="Admin"></TextBox>
        </StackPanel>
        <StackPanel Margin="0 5">
            <TextBlock>Пароль</TextBlock>
            <PasswordBox x:Name="pdPassword" Password="Password123"></PasswordBox>
        </StackPanel>
        <StackPanel Margin="0 5" Orientation="Horizontal">
            <Button x:Name="btnSignIn" Padding="10" Margin="10" Click="btnSignIn_Click">Войти</Button>
            <Button x:Name="btnSignOut" Padding="10" Margin="10" Click="btnSignOut_Click">Выйти</Button>
        </StackPanel>
    </StackPanel>
</Window>
